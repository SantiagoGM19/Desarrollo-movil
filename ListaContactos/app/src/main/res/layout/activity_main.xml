<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNombre"
        android:padding="20dp"
        android:gravity="right"
        android:hint="Ingrese Nombre"
        android:inputType="text">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etApellido"
        android:padding="20dp"
        android:gravity="right"
        android:hint="Ingrese Apellido"
        android:inputType="text">

    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCorreo"
        android:padding="20dp"
        android:gravity="right"
        android:hint="Ingrese Correo"
        android:inputType="textEmailAddress">

    </EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEstatura"
        android:padding="20dp"
        android:gravity="right"
        android:hint="Ingrese Estatura"
        android:inputType="number">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPromedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Estatura promedio: 0 CM"/>

        <Button
            android:id="@+id/btnVerMayoresAlPromedio"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Ver mayores al promedio"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnMostrarTodos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Mostrar todos"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/btnAdd"
        android:backgroundTint="@color/green"
        android:text="Agregar">

    </Button>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvContactos">

    </ListView>

</LinearLayout>